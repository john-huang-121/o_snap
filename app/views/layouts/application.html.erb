<!DOCTYPE html>
<html>
  <head>
    <title>OSnap</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <% if current_user %>
      <script>
        window.currentUserId = {
          currentUserId: <%= current_user.id %>
        };
      </script>
    <% end %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
